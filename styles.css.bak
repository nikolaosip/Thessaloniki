*{
	box-sizing:border-box;
	
}

body{
	margin:0;
	background: lightblue url("back1.png") repeat fixed center;
}

.head {
	display:flex;
	flex-direction: row;
	
	
}

.head > img{
	
	max-width:33.33%;
	 min-width: 0; 
	
	}
	

	
.head > webp{
	
	max-width:33.33%;
	 min-width: 0;
	
	}	

.myHeader{
	display:flex;
	text-align:center;
	position: relative;
	border: 6px solid red;
	width:80%;
	height: 100%;
	background-color: lightgrey;
	margin:6px auto;	
	
	
}

.myHeader > h1{
	
	text-shadow: 2px 2px;
	animation:runText 10s infinite;
}

@keyframes runText{
	0%{color:#ffff1a;}
	40%{color:red;}
	75%{color:#ffff1a;}
	100%{color:blue;}
}

.myHeader img{
	float:left;	
	position: relative;      
	
	animation:run 10s infinite;
}



.myHeader h1{
	
	position: absolute;
        z-index: 999;
        margin: 0 auto;
        left: 0;
        right: 0;
}

@keyframes run {
	 0% {left:0px;}
	 50%{left:80%;}
	 100% {left:0px;}
}





.image-grid{
	display:grid;
	
	grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	
	gap:4px;
	
	align-items:center;  
	
	
	
}
.image-grid img{
	display:block;
	box-shadow:-1px 0px 0px rgba(0,0,0,0.06);
	width:100%;
	
}

.image-grid > img:hover{
	-ms-transform: scale(1.7); /* IE 9 */
        -webkit-transform: scale(1.7); /* Safari 3-8 */
          transform: scale(1.7);
	
	
}	
